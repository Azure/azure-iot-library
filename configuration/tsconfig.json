{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./"
    },
    "exclude": [
        "node_modules",
        "typings"
    ]
}
