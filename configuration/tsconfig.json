{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "dist",
    "node_modules",
    "typings"
  ]
}
